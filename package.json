{
  "name": "snips-action-yeelight",
  "version": "1.0.0",
  "description": "Snips action code to control your Xiaomi Yeelights from anywhere in your house.",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run lint && npm run build && npm run test",
    "build": "snips-toolkit build",
    "dev": "snips-toolkit dev",
    "test": "snips-toolkit test '^.*\\.spec\\.[jt]s$'",
    "test:sandbox": "snips-toolkit test -s '^.*\\.spec\\.[jt]s$'",
    "launch": "snips-toolkit run",
    "lint": "eslint \"**/*.[jt]s\""
  },
  "author": "Thomas Bouvier &lt;contact@thomas-bouvier.io&gt;",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thomas-bouvier/snips-action-yeelight"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.5.1",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "hermes-javascript": "^0.3.11",
    "yeelight-node-binding": "^1.1.1",
    "snips-toolkit": "^0.1.3"
  },
  "sandbox": [
    "dgram",
    "events",
    "fs",
    "net",
    "os",
    "path",
    "querystring",
    "tty",
    "url",
    "util"
  ]
}
